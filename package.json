{
  "name": "mzettel",
  "displayName": "Mzettel",
  "publisher": "monferrand",
  "description": "Make markdown notes for a Zettelkasten",
  "version": "0.2.0",
  "icon": "mzettel.png",
  "engines": {
    "vscode": "^1.42.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/monferrand/mzettel.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration":{
      "title": "Mzettel",
      "properties": {
        "mzettel.notesPath": {
          "type": ["string", null],
          "default": null,
          "description": "Give the path were to put the zettelkasten notes. By default will put the note in the current folder."
        },
        "mzettel.notesTemplate": {
          "type": "string",
          "default":[
            "*${date}*",
            "> tags: ",
            "",
            "> references: ",
            "---",
            "# ${title}",
            "",
            "",
            "",
            "---",
            "Links:",
            ">   - "
          ],
          "description": "The template to use for the notes. You can use ${date} and ${title} parameters."
        }
      }
    },
    "commands": [
      {
        "command": "mzettel.makeNote",
        "title": "Mzettel note"
      },
      {
        "command": "mzettel.linkToClipboard",
        "title":  "Mzettel note link to clipboard"
      }     
    ],
  "keybindings": [
    {
      "command": "mzettel.makeNote",
      "key": "alt+z",
      "mac": "option+z"
    },
    {
      "command": "mzettel.linkToClipboard",
      "key": "alt+l",
      "mac": "option+l"
    }
  
  ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.1",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.42.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.18.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "glob": "^7.1.6",
    "mocha": "^7.0.1",
    "typescript": "^3.7.5",
    "minimist": ">=1.2.3",
    "vscode-test": "^1.3.0"
  }
}
