{
  "name": "mzettle",
  "displayName": "mzettle",
  "publisher": "monferrand",
  "description": "Make markdown notes for a zettlekasten",
  "version": "0.10.4",
  "icon": "mzettle.png",
  "engines": {
    "vscode": "^1.50.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/monferrand/mzettle.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Mzettle",
      "properties": {
        "mzettle.notesPath": {
          "type": [
            "string",
            null
          ],
          "default": null,
          "description": "Give the path were to put the zettlekasten notes. By default will put the note in the current folder."
        },
        "mzettle.notesTemplate": {
          "type": "array",
          "default": [
            "*${date}*",
            "> tags: ",
            "",
            "> references: ",
            "---",
            "# ${title}",
            "",
            "",
            "",
            "---",
            "Links:",
            ">   - "
          ],
          "description": "The template to use for the notes. You can use ${date} and ${title} parameters. \n It's an array of string. Each elements of the array gives a newline."
        },
        "mzettle.filenameTemplate": {
          "type": "string",
          "default": "${date}_${title}.md",
          "description": "The template to use for the note file name. You can use ${date}, ${time} and ${title} parameters."
        },
        "mzettle.titleSeparator": {
          "type": "string",
          "default": "_",
          "description": "Character(s) used to replace the spaces the in title for the filename."
        }
      }
    },
    "commands": [
      {
        "command": "mzettle.makeNote",
        "title": "mzettle note"
      },
      {
        "command": "mzettle.linkToClipboard",
        "title": "mzettle note link to clipboard"
      }
    ],
    "keybindings": [
      {
        "command": "mzettle.makeNote",
        "key": "alt+z",
        "mac": "option+z"
      },
      {
        "command": "mzettle.linkToClipboard",
        "key": "alt+l",
        "mac": "option+l"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^7.0.1",
    "@types/node": "^12.12.67",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@vscode/test-electron": "^1.6.2",
    "esbuild": "^0.12.29",
    "eslint": "^8.6.0",
    "glob": "^7.1.6",
    "minimist": "^1.2.5",
    "mocha": "^9.1.3",
    "ts-loader": "^8.0.4",
    "typescript": "^3.9.7",
    "vscode-test": "^1.4.0",
    "ansi-regex": ">=5.0.1",
    "webpack": "^5.0.0",
    "webpack-cli": "^4.0.0"
  },
  "dependencies": {
    "moment": "^2.29.1"
  }
}
