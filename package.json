{
  "name": "mzettel",
  "displayName": "mzettel",
  "publisher": "monferrand",
  "description": "Make markdown notes for a Zettlekasten",
  "version": "0.0.1",
  "icon": "mzettle_logo.png",
  "engines": {
    "vscode": "^1.42.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/monferrand/mzettel.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.mzettel"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.mzettel",
        "title": "mzettel note"
      }
    ],
    "snippets": [
      {
        "language": "markdown",
        "path": "./snippets.json"
      }
  ],
  "keybindings": [
    {
      "command": "extension.mzettel",
      "key": "alt+z",
      "mac": "option+z"
    }]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.1",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.42.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.18.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "glob": "^7.1.6",
    "mocha": "^7.0.1",
    "typescript": "^3.7.5",
    "vscode-test": "^1.3.0"
  }
}
